# ==============================================
# FUNCIONES ESPECÍFICAS DE YAD
# ==============================================

# 1. CUADRO DE ENTRADA DE TEXTO
yad_entrada_texto() {
    nombre=$(yad --entry \
        --title="Entrada de texto" \
        --text="Ingresa tu nombre:" \
        --entry-text="")
    echo "Nombre ingresado: $nombre"
}

# 2. FORMULARIO CON MÚLTIPLES CAMPOS
yad_formulario() {
    datos=$(yad --form \
        --title="Registro de usuario" \
        --field="Nombre:" \
        --field="Apellido:" \
        --field="Email:" \
        --field="Edad:NUM" \
        --field="País:CB" "México!España!Argentina!Colombia" \
        --field="Acepto términos:CHK")
    echo "Datos: $datos"
}

# 3. SELECTOR DE ARCHIVO
yad_selector_archivo() {
    archivo=$(yad --file \
        --title="Selecciona un archivo" \
        --file-filter="Imágenes | *.png *.jpg *.jpeg" \
        --file-filter="Documentos | *.pdf *.doc" \
        --file-filter="Todos | *")
    echo "Archivo seleccionado: $archivo"
}

# 4. SELECTOR DE CARPETA
yad_selector_carpeta() {
    carpeta=$(yad --file --directory \
        --title="Selecciona una carpeta")
    echo "Carpeta: $carpeta"
}

# 5. SELECTOR DE COLOR
yad_selector_color() {
    color=$(yad --color \
        --title="Elige un color" \
        --init-color="#FF0000")
    echo "Color seleccionado: $color"
}

# 6. CALENDARIO
yad_calendario() {
    fecha=$(yad --calendar \
        --title="Selecciona una fecha" \
        --date-format="%Y-%m-%d")
    echo "Fecha: $fecha"
}

# 7. BARRA DE PROGRESO
yad_progreso() {
    (
        for i in {1..100}; do
            echo "$i"
            echo "# Procesando archivo $i de 100"
            sleep 0.05
        done
    ) | yad --progress \
        --title="Descargando..." \
        --text="Por favor espera..." \
        --percentage=0 \
        --auto-close
}

# 8. LISTA CON CHECKBOXES
yad_lista_checkboxes() {
    seleccion=$(yad --list \
        --title="Selecciona opciones" \
        --checklist \
        --column="Sel" --column="ID" --column="Software" \
        FALSE 1 "Apache" \
        TRUE 2 "MySQL" \
        FALSE 3 "PHP" \
        TRUE 4 "Python" \
        --width=400 --height=300)
    echo "Seleccionado: $seleccion"
}

# 9. LISTA CON RADIO BUTTONS
yad_lista_radio() {
    opcion=$(yad --list \
        --title="Elige una opción" \
        --radiolist \
        --column="Sel" --column="ID" --column="Sistema" \
        TRUE 1 "Ubuntu" \
        FALSE 2 "Debian" \
        FALSE 3 "Fedora" \
        FALSE 4 "Arch")
    echo "Sistema elegido: $opcion"
}

# 10. TABLA EDITABLE
yad_tabla() {
    yad --list \
        --title="Lista de tareas" \
        --column="ID" --column="Tarea" --column="Estado" \
        1 "Instalar servidor" "Completado" \
        2 "Configurar red" "Pendiente" \
        3 "Backup" "En proceso" \
        --editable \
        --print-all
}

# 11. CUADRO DE TEXTO MULTILÍNEA
yad_texto_multilinea() {
    texto=$(yad --text-info \
        --title="Editor de texto" \
        --editable \
        --width=600 --height=400 \
        --text="Escribe aquí tu mensaje...")
    echo "Texto ingresado: $texto"
}

# 12. NOTIFICACIÓN
yad_notificacion() {
    yad --notification \
        --image="dialog-information" \
        --text="Tarea completada exitosamente" \
        --command="echo 'Click en notificación'"
}

# 13. MÚLTIPLES BOTONES PERSONALIZADOS
yad_botones_custom() {
    yad --title="Acción a realizar" \
        --text="¿Qué deseas hacer?" \
        --button="Guardar:0" \
        --button="Cancelar:1" \
        --button="Eliminar:2" \
        --button="gtk-help:3"
    
    case $? in
        0) echo "Guardar presionado";;
        1) echo "Cancelar presionado";;
        2) echo "Eliminar presionado";;
        3) echo "Ayuda presionada";;
    esac
}

# 14. ESCALA/SLIDER
yad_escala() {
    valor=$(yad --scale \
        --title="Ajusta el volumen" \
        --text="Volumen:" \
        --min-value=0 \
        --max-value=100 \
        --value=50 \
        --step=5)
    echo "Volumen: $valor%"
}

# 15. ÍCONOS (Icon Browser)
yad_iconos() {
    icono=$(yad --icons \
        --title="Selecciona un ícono" \
        --read-dir=/usr/share/icons/hicolor/48x48/apps)
    echo "Ícono: $icono"
}

# ==============================================
# FUNCIONES ESPECÍFICAS DE ROFI
# ==============================================

# 1. MENÚ SIMPLE
rofi_menu_simple() {
    opcion=$(echo -e "Opción 1\nOpción 2\nOpción 3\nOpción 4" | \
        rofi -dmenu -p "Selecciona:")
    echo "Seleccionaste: $opcion"
}

# 2. MENÚ CON ÍCONOS (requiere rofi con soporte de íconos)
rofi_menu_iconos() {
    opcion=$(echo -e "🏠 Inicio\n📁 Documentos\n🖼️ Imágenes\n⚙️ Configuración" | \
        rofi -dmenu -p "Ir a:")
    echo "Elegiste: $opcion"
}

# 3. ENTRADA DE TEXTO
rofi_entrada_texto() {
    texto=$(rofi -dmenu -p "Ingresa texto:" -lines 0)
    echo "Texto: $texto"
}

# 4. ENTRADA DE CONTRASEÑA
rofi_password() {
    password=$(rofi -dmenu -password -p "Contraseña:" -lines 0)
    echo "Password ingresado (oculto)"
}

# 5. SELECTOR DE MÚLTIPLES OPCIONES
rofi_multi_select() {
    seleccion=$(echo -e "Apache\nMySQL\nPHP\nPython\nNode.js" | \
        rofi -dmenu -multi-select -p "Selecciona (Ctrl para múltiples):")
    echo "Selección: $seleccion"
}

# 6. MENÚ CON NÚMEROS DE LÍNEA
rofi_con_numeros() {
    opcion=$(echo -e "Iniciar servidor\nDetener servidor\nReiniciar servidor\nEstado" | \
        rofi -dmenu -i -l 4 -p "Acción:")
    echo "Acción: $opcion"
}

# 7. BÚSQUEDA FUZZY (insensible a mayúsculas)
rofi_busqueda_fuzzy() {
    apps=("Firefox" "Chrome" "Terminal" "Editor" "Música" "Videos")
    seleccion=$(printf '%s\n' "${apps[@]}" | \
        rofi -dmenu -i -p "Buscar app:")
    echo "App: $seleccion"
}

# 8. SELECTOR DE COMANDOS RECIENTES
rofi_comandos_recientes() {
    comando=$(history | awk '{$1=""; print $0}' | \
        rofi -dmenu -p "Comando:")
    echo "Ejecutar: $comando"
}

# 9. MENÚ CON TEMA PERSONALIZADO
rofi_tema_custom() {
    opcion=$(echo -e "🔴 Crítico\n🟡 Advertencia\n🟢 Normal" | \
        rofi -dmenu \
        -p "Nivel de alerta:" \
        -theme-str 'window {width: 400px;}' \
        -theme-str 'listview {lines: 3;}')
    echo "Nivel: $opcion"
}

# 10. SELECTOR DE VENTANAS ABIERTAS
rofi_ventanas() {
    rofi -show window
}

# 11. LANZADOR DE APLICACIONES
rofi_lanzador() {
    rofi -show drun -show-icons
}

# 12. SELECTOR DE SSH
rofi_ssh() {
    rofi -show ssh
}

# 13. CALCULADORA
rofi_calc() {
    resultado=$(rofi -show calc -no-show-match -no-sort)
    echo "Resultado: $resultado"
}

# 14. MENÚ COMBINADO (custom script)
rofi_menu_combinado() {
    # Crear un script temporal para rofi
    cat > /tmp/rofi_script.sh << 'EOF'
#!/bin/bash
if [ -z "$@" ]; then
    echo "Sistema"
    echo "Aplicaciones"
    echo "Red"
    echo "Archivos"
else
    case "$@" in
        "Sistema")
            echo "Apagar"
            echo "Reiniciar"
            echo "Suspender"
            ;;
        "Aplicaciones")
            echo "Firefox"
            echo "Terminal"
            echo "Editor"
            ;;
        "Red")
            echo "WiFi On"
            echo "WiFi Off"
            echo "Estado"
            ;;
        "Archivos")
            echo "Documentos"
            echo "Descargas"
            echo "Imágenes"
            ;;
        *)
            echo "Ejecutando: $@"
            ;;
    esac
fi
EOF
    chmod +x /tmp/rofi_script.sh
    rofi -show custom -modi "custom:/tmp/rofi_script.sh"
}

# 15. MENÚ CON CONFIRMACIÓN
rofi_confirmar() {
    respuesta=$(echo -e "Sí\nNo" | \
        rofi -dmenu -p "¿Estás seguro?")
    
    if [ "$respuesta" = "Sí" ]; then
        echo "Confirmado"
    else
        echo "Cancelado"
    fi
}

